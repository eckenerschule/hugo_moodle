{{!
    @template local_megamenu/menu

    Renders a single mega menu.

    Classes required for JS:
    -

    Data attributes required for JS:
    -

    Context variables required for this template:
    * lists

    Example context (json):
    {
        "uniqueid": "123",
        "dropdowntogglelabel": "Click me",
        "lists": [
            {
                "heading": "List title",
                "items": [
                    {
                        "url": "http://example.com",
                        "label": "Go here"
                    }
                ]
            }
        ],
        "hasimage": true,
        "imageurl": "http://example.com"
    }
}}
<button id="megamenu-{{uniqueid}}-toggle" data-toggle="dropdown" data-target="#megamenu-{{uniqueid}}" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle d-inline btn btn-link">{{dropdowntogglelabel}}</button>
<div aria-labelledby="megamenu-{{uniqueid}}-toggle" id="megamenu-{{uniqueid}}" class="dropdown-menu megamenu w-100 border-0 p-0 m-0">
    <div class="container-fluid">
        <div class="row bg-white rounded-0 m-0 shadow-lg w-100">
            {{#hasimage}}
                <div class="col-lg-7 col-xl-8">
            {{/hasimage}}
            {{^hasimage}}
                <div class="col">
            {{/hasimage}}
                    <div class="p-4">
                        <div class="row">
                            {{#lists}}
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                                    <h6 class="font-weight-bold text-uppercase">{{heading}}</h6>
                                    <ul class="list-unstyled megamenu-list">
                                        {{#items}}
                                            <li class="nav-item"><a href="{{url}}" class="nav-link text-small pb-0">{{label}}</a></li>
                                        {{/items}}
                                    </ul>
                                </div>
                            {{/lists}}
                        </div>
                    </div>
                </div>
            {{#hasimage}}
                <div class="col-lg-5 col-xl-4 px-0 d-none d-lg-block" style="background: center center url({{imageurl}})no-repeat; background-size: cover;"></div>
            {{/hasimage}}
        </div>
    </div>
</div>
