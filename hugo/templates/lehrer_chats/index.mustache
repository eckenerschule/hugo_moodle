{{!
    @template local_hugo/index


    Example context (json):
    {
      
    }
}}
<body {{{ bodyattributes }}}>
    {{{ output.standard_top_of_body_html }}}
    <div id="background-container">
        <input id="open_confirm_box" class="close_btn" type="image" src="/local/hugo/assets/media/xmark-solid.svg" />
        <div id="confirmBox" class="{{^isloggedin}}no_logged_in{{/isloggedin}}">
            <div class="title-container">
                <div class="title-div">{{ plugin_close }}</div>
                <input id="close_confirm_box" class="close_btn_small" type="image" src="/local/hugo/assets/media/xmark-solid.svg" />
            </div>
            <p class="info-text">{{ close_request }}</p>
            <div class="action-button-container">
                <a href="{{redirect}}" id="confirm_close_chat_btn">{{ yes }}</a>
                <button id="cancel_confirm_box_btn">{{ cancel }}</button>
            </div>
        </div>
        {{#isloggedin}}
            <div class="modal-container">
                <div class="lehrer-head-container">
                    <input id="close_lehrer" class="close_btn_lehrer" type="image" src="/local/hugo/assets/media/rotate-left-solid.svg" onclick="window.location.href = '/local/hugo/lehrer.php'" />
                    <div class=" modal-item themenbereich-container">
                        <h1 class="header">Frag Hugo</h1>
                        <span class="subheader">Funktionsauswahl</span>
                    </div>
                </div>
                <div class="chat-content-container">
                    <div id="chat-list-container" class="chat-list-container">
                        <div id="history-list"></div>
                        {{! <button id="load-more-btn" class="load-more-btn">Mehr laden</button> }}
                    </div>
                    <div id="chat-details-container" class="chat-details-container">
                        <div id="details-list" class="details-head-container">
                            <div class="details-head-content-left">
                                <div id="details-dates"></div>
                                <div id="details-message"></div>
                                <div id="details-subjects"></div>
                            </div>
                            <div class="details-head-content-right">
                                <div class="tag-wrapper">
                                    <div class="reviewed_wrapper">
                                        {{! <input id="" width="18px" height="18px" class="arrow-tag" type="image" src="/local/hugo/assets/media/chevron-up-solid.svg" onclick="" /> }}
                                        <img width="18px" height="18px" src="/local/hugo/assets/media/circle-check.svg">
                                        <div id="reviewed_value" class="value-tag"></div>
                                        {{! <input id="" width="18px" height="18px" class="arrow-tag" type="image" src="/local/hugo/assets/media/chevron-down-solid.svg" onclick="" /> }}
                                    </div>
                                    <div class="neutral_wrapper">
                                        {{! <input id="" width="18px" height="18px" class="arrow-tag" type="image" src="/local/hugo/assets/media/chevron-up-solid.svg" onclick="" /> }}
                                        <img width="18px" height="18px" src="/local/hugo/assets/media/circle-question.svg">
                                        <div id="neutral_value" class="value-tag"></div>
                                        {{! <input id="" width="18px" height="18px" class="arrow-tag" type="image" src="/local/hugo/assets/media/chevron-down-solid.svg" onclick="" /> }}
                                    </div>
                                    <div class="marked_wrapper">
                                        {{! <input id="" width="18px" height="18px" class="arrow-tag" type="image" src="/local/hugo/assets/media/chevron-up-solid.svg" onclick="" /> }}
                                        <img width="18px" height="18px" src="/local/hugo/assets/media/circle-exclam.svg">
                                        <div id="marked_value" class="value-tag"></div>
                                        {{! <input id="" width="18px" height="18px" class="arrow-tag" type="image" src="/local/hugo/assets/media/chevron-down-solid.svg" onclick="" /> }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="details-content" class="details-content-container">
                            <div id="details-wrapper-start">
                               <div id="start_author">Hugo</div>
                                <div id="start_content"></div>
                            </div>
                            <div id="details-wrapper-end"></div>
                       </div>
                    <div id="fertigstellen-container" class="fertigstellen-container">
                            <button id="submit-history" class="submit-history-btn">Fertigstellen</button>
                        </div>
                </div>
            </div>
        {{/isloggedin}}
        
    </div>

