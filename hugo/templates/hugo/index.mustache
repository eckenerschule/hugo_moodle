{{!
    @template local_hugo/index


    Example context (json):
    {
      
    }
}}

<body {{{ bodyattributes }}}>
    {{{ output.standard_top_of_body_html }}}
    <div id="background-container">
        <input id="open_confirm_box" class="close_btn" type="image" src="/local/hugo/assets/media/xmark-solid.svg" />
        <div id="confirmBox" class="{{^isloggedin}}no_logged_in{{/isloggedin}}">
            <div class="title-container">
                <div class="title-div">{{chat_close}}</div>
                <input id="close_confirm_box" class="close_btn_small" type="image" src="/local/hugo/assets/media/xmark-solid.svg" />
            </div>
            <p class="info-text">{{close_request}}</p>
            <div class="action-button-container">
                <a href="{{redirect}}" id="confirm_close_chat_btn">{{ yes }}</a>
                <button id="cancel_confirm_box_btn">{{ no }}</button>
            </div>
            
        </div>
        {{#isloggedin}}
            <div class="chatbox-container">
                <div class="hugo-ava-container"><img id="hugo-avatar" src="/local/hugo/assets/media/Eckener_Avatar.png" alt="Hugo"></div>
                <div class="inner-chatbox-container">
                    <div id="chat_history" class="chat-history-container">
                        <div id="intro-text" class="displayUser-container left-container first-child" style="display:none">
                            <div class="chatbubble left"></div>
                        </div>
                    </div>
                    <div class="chat-input-container">
                        <div class="submit-container">
                            <input class="chat_input_btn" maxlength="200" type="text" id="chat_input" placeholder="{{placeholder_input}}" disabled />
                            <span id="confirm_chat_input" class="confirm-button"></span>
                        </div>
                        <div id="input_counter"></div>
                    </div>
                </div>
            </div>
        {{/isloggedin}}
        
    </div>

